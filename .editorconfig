root = true

[*]
indent_style = space
indent_size = 2
tab_width = 2
max_line_length = 80

end_of_line = lf
charset = utf-8
trim_trailing_whitespace = true
insert_final_newline = true

[{package.json,.travis.yml}]
indent_style = space
indent_size = 2

[src/**.ts, *.js]
indent_style = space
indent_size = 2

[*.md]
trim_trailing_whitespace = false
